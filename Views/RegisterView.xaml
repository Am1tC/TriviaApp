<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaAppClean.Views.RegisterView"
             Title="RegisterView">
    <VerticalStackLayout>
        <Label 
            Text="Register here!"
            VerticalOptions="Center" />
        <Entry 
            Placeholder="Name"
            Text="{Binding Name}"
            Keyboard="Email"
            HorizontalOptions="Center"/>

        <Entry
            Placeholder="Password"
            IsPassword="True"
            Keyboard="Numeric"
            Text="{Binding Password}"
            VerticalOptions="Center"/>
        
        <Entry 
            Placeholder="Email"
            Text="{Binding Email}"     
            Keyboard="Email"/>

        <Button>
            
        </Button>
        
    </VerticalStackLayout>
</ContentPage>